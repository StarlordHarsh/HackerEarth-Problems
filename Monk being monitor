from collections import Counter 
n=int(input())
for _ in range(n):
    l=int(input())
    li=list(map(int, input().split()))
    re = sorted(li, key = li.count,reverse = True)
    if re.count(re[0])-re.count(re[l-1])>0:
        print(re.count(re[0])-re.count(re[l-1])) 
    elif l:
        print(-1)
    else:
        print(1)
